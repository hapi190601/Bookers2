<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <%= render 'users/template', book: @book ,user: @user %>
      </div>

      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>

        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <% @books.each do |book| %>
          <tbody>
            <tr>
              <!--アイコン写真-->
              <td>
                <%= link_to (attachment_image_tag @user, :profile_image , :fill ,40 ,40, fallback: "no_image.jpg", size:"40x40") , user_path(@user.id) %>
              </td>
              <!--本のタイトル-->
              <td>
                <%= link_to book.title, book_path(book.id) %>
              </td>
              <!--本の感想-->
              <td>
                <%= book.body %>
              </td>

              <td>
                <p>コメント数：<%= book.book_comments.count %></p>
              </td>
            </tr>
          </tbody>
          <% end %>
        </table>
      </div>

    </div>
  </div>
</main>