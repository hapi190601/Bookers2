<div class="common-parts">

  <div class="user-info">
    <!--ユーザー情報-->
    <h2>User info</h2>
    <!--写真-->
    <%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
    <table>
      <tbody>
        <tr>
          <td>name</td>
          <td><%= user.name %></td>
        </tr>

        <tr>
          <td>introduction</td>
          <td><%= user.introduction %></td>
        </tr>
      </tbody>
    </table>

    <!--ここにプロフィール編集-->
    <% if user.id == current_user.id %>
    <%= link_to "プロフィール編集", edit_user_path(user) %></p>
    <% else %>
    <%= link_to "マイページへ", user_path(current_user.id) %>
    <% end %>
  </div>


  <!--新規投稿-->
  <h2>New book</h2>
  <%= form_with model: book, local:true do |f| %>
    <h4>title</h4>
    <%= f.text_field :title %>
    <h4>Opinion</h4>
    <%= f.text_area :body %>
    <br>
    <%= f.submit 'Create Book' %>
  <% end %>
</div>