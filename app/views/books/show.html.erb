<div class="forflex">

  <div class="left">
    <%= render 'users/template', book: @book ,user: @user %>
  </div>

  <div class="right">
    <h1>Book detail</h1>

    <tbody>
      <tr>
        <td><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></td>
        <td><%= @book.title %></td>
        <td><%= @book.body %></td>
        <% if @book.user == current_user %>
        <td><%= link_to "Edit", edit_book_path %></td>
        <td><%= link_to "Destroy", book_path(@book.id), method: :delete %></td>
        <% end %>
      </tr>
    </tbody>
  </div>

</div>


