<% if @book.errors.any? %>
  <p><%= pluralize(@book.errors.count, "error") %>  prohibited this book from being saved:</p>
  <ul>
  <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
  </ul>
<% end %>

<div class="forflex">

  <div class="left">
    <%= render 'users/template', book: @book ,user: @user %>
  </div>

  <div class="right">
    <h1>Books</h1>


    <table class="table-hover">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
      </thead>
      <% @books.each do |book| %>
      <tbody>
        <tr>
          <td><%= link_to (attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg") , user_path(book.user_id) %></td>
          <td><%= link_to book.title, book_path(book.id) %></td>
          <td><%= book.body %></td>
        </tr>
      </tbody>
      <% end %>
    </table>

  </div>
</div>