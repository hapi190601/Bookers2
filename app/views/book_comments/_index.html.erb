<% comments.each do |comment| %>
  <tr>
    <!--コメント者の写真と名前(リンク)-->
    <td class="td">
      <%= link_to user_path(comment.user_id) do %>
        <%= attachment_image_tag comment.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size:"40x40" %>
        <br>
        <%= comment.user.name %>
      <% end %>
    </td>

    <!--コメント内容-->
    <td id="comment_space">
      <%= comment.comment %>
    </td>

    <!--削除ボタン-->
    <td class="td">
      <% if current_user.id == comment.user.id %>
        <%= link_to "Destroy", book_book_comment_path(comment.book_id, comment), method: :delete, remote: true, class:"btn btn-sm btn-danger" %>
      <% end %>
    </td>
  </tr>
<% end %>